/* 1. RESET Y FUENTE */
body {
    font-family: 'Arial', sans-serif; /* Tipo de letra simple */
    margin: 0;
    background-color: #b4bac0ff; /* Fondo muy claro */
    color: #47525eff; /* Texto oscuro */
}

/* 2. ENCABEZADO Y NAVEGACIÓN */
header {
    background-color: #354e68ff; /* AZUL VIVO */
    color: white;
    padding: 15px 30px;
    display: flex;
    justify-content: space-between; /* Alinea el nombre y los links a los lados */
    align-items: center;
}

header a {
    color: white;
    text-decoration: none; /* Quita el subrayado de los links */
    margin-left: 20px;
    font-weight: bold;
}

/* 3. SECCIÓN PRINCIPAL (INFO) */
.seccion-principal {
    background-color: #e9ecef; /* Fondo gris claro */
    text-align: center;
    padding: 100px 20px;
}

.seccion-principal button {
    background-color: #1c163dff; /* VERDE */
    color: white;
    border: none;
    padding: 12px 25px;
    margin-top: 20px;
    cursor: pointer;
    font-size: 1.1em;
    border-radius: 5px;
}

/* 4. CARACTERÍSTICAS */
.seccion-normal {
    padding: 50px 20px;
    text-align: center;
}

.tarjeta {
    background-color: white;
    border: 1px solid #dee2e6;
    padding: 20px;
    margin: 15px;
    border-radius: 8px;
    display: inline-block; /* Pone las tarjetas una al lado de la otra */
    width: 30%; /* Ocupa un tercio del espacio */
}

/* 5. PIE DE PÁGINA */
footer {
    background-color: #343a40; /* Fondo oscuro */
    color: white;
    text-align: center;
    padding: 15px;
    font-size: 0.9em;
}